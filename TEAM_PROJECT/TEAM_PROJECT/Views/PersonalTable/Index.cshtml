@model TEAM_PROJECT.Models.PersonalTable

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    a {
        color: white;
        cursor: default;
    }

    h3 {
        font-size: 15px;
        color: #fff;
        text-transform: uppercase;
        font-weight: 300;
        text-align: center;
        margin-bottom: 15px;
        cursor: default;
    }
</style>

<section>
    <!--for demo wrap-->
    <h1>TABLE</h1>
    <div class="tbl-header">
        <div class="tbl-content">
            <table cellpadding="0" cellspacing="0" border="0">
                <tbody>
                    @{
                        for (int i = 0; i < ViewBag.RowsCount; i++)
                        {
                            <tr>
                                @{
                                    foreach (var item in ViewBag.CellList)
                                    {
                                        if (item.id_row == i)
                                        {
                                            <td>
                                                <a onclick="location.href='@Url.Action("ViewPage", "PersonalTable", new { row = i, column = item.id_column })'" class="button button-green">@item.value</a>
                                            </td>
                                        }
                                    }
                                }
                            </tr>
                                    }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <h3 onclick="location.href='@Url.Action("ClearTable", "PersonalTable", null)'">Очистить таблицу</h3>
</section>
