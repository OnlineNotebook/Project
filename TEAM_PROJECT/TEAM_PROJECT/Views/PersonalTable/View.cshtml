@model WebApplication1.Models.PersonalTable
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    a {
        color: white;
    }
</style>

<section>
    <!--for demo wrap-->
    <h1>TABLE</h1>
    <div class="tbl-header">

        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>
                        <h4 class="button button-green">Изменение значения</h4>
                        @using (Html.BeginForm("Upgrade", "PersonalTable", "POST"))
                        {
                            @Html.EditorFor(model => model.Value)
                            <input type="submit" value="Изменить" />
                        }
                    </th>
                </tr>
            </thead>
        </table>

        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>
                        <h4 class="button button-green">Удаление значения</h4>
                        @using (Html.BeginForm("Delete", "PersonalTable", "POST"))
                        {
                            <input type="submit" value="Удалить" />
                        }
                    </th>
                </tr>
            </thead>
        </table>

    </div>

</section>